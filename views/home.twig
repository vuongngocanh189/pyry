{% extends 'layout/master.twig' %}
{% block title %}Math Quizzes for Kids{% endblock %}
{% block css %}
	<style type="text/css">
	.btn{
		width: 100%;
		padding: 10px;
		margin: 0;
		border-radius: 30px;
	}
	</style>
{% endblock %}
{% block content %}
	<div class="container main">
		<div class="row">
		{% for method in cal_array %}
		  <div class="col-sm-6 col-md-3">
		    <div class="thumbnail">
		      	<img src="img/{{ method }}.png" class="center" alt="{{ method }} math test" />
		      	<hr>
		      	<div class="thumb-info">
			        <h2 class="text-center">{{ method|upper }}</h2>
			   
					{% if method != "division" %}
						<p><a href="{{ path_for('navbar', { 'cal' : method, 'level': 'easy' }) }}" class="btn btn-info" role="button" target="_blank">
							Easy <span class="badge">1-9</a></p>

		  				<p><a href="{{ path_for('navbar', { 'cal' : method, 'level': 'medium' }) }}" class="btn btn-success" role="button" target="_blank">
							Medium <span class="badge">1-99</span>
						</a></p>

						<p><a href="{{ path_for('navbar', { 'cal' : method, 'level': 'hard' }) }}" class="btn btn-danger" role="button" target="_blank">
							Hard <span class="badge">1-999</span>
						</a></p>

					{% elseif method == "division" %}
						<p><a href="{{ path_for('navbar', { 'cal' : method, 'level': 'easy' }) }}" class="btn btn-info" role="button" target="_blank">
							Easy <span class="badge">1-99</a></p>

		  				<p><a href="{{ path_for('navbar', { 'cal' : method, 'level': 'medium' }) }}" class="btn btn-danger" role="button" target="_blank">
							Medium <span class="badge">1-999</span>
						</a></p>
					{% endif %}
					
		    	</div>
		    </div>
		  </div>
		{% endfor %}
	</div>
</body>
{% endblock %}